{
    "name": "Spotify Sampled",
    "version": "0.1",
    "description": "Get the sample used in a song on Spotify",
    "permissions": ["tabs", "background", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["*://open.spotify.com/*"],
            "js": ["content-script.js"],
            "css": ["css/spotifysampled.css"]
        }
    ],
    "web_accessible_resources": ["icons/album-18dp.svg"],
    "manifest_version": 2
}
